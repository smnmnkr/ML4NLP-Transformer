{
  "model": {
    "num_encoder_layers": 4,
    "num_decoder_layers": 4,
    "emb_size": 512,
    "nhead": 8,
    "dim_feedforward": 512,
    "dropout": 0.3
  },
  "training": {
    "seed": 42,
    "epochs": 200,
    "batch_size": 256,
    "report_every": 5,
    "log_path": "./results/01/",
    "optimizer": {
      "lr": 1e-4,
      "betas": [
        0.9,
        0.98
      ],
      "eps": 1e-9
    },
    "scheduler": {
      "factor": 0.8,
      "patience": 10,
      "min_lr": 1e-6
    },
    "stopper": {
      "delta": 2e-2,
      "patience": 20
    }
  },
  "predict": [
    "ein mann steht auf einem baugerüst .",
    "männer spielen auf trommeln .",
    "ein kind läuft auf einem weg ."
  ]
}